{
    "name": "Tabbify!!!",
    "description": "Tabby Cat for Spotify",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "identity", "activeTab", "scripting", "tabs"], 
    "action": {
        "default_popup": "popup.html", 
        "default_icon": {
            "16": "/images/tabbicon16.png",
            "32": "/images/tabbicon32.png",
            "48": "/images/tabbicon48.png",
            "128": "/images/tabbicon128.png"        }
    }, 
    "icons": {
        "16": "/images/tabbicon16.png",
        "32": "/images/tabbicon32.png",
        "48": "/images/tabbicon48.png",
        "128": "/images/tabbicon128.png"
    },
    "host_permissions": [
        "https://api.spotify.com/*"
    ]
}